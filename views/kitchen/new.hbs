<h1>create new Kitchen</h1>


<form action="/user/{{userId}}/kitchen" method="POST">
  <div>
    <label for="name">Kitchen Name</label>
    <input type="text" name="name" placeholder="Kitchen Name" />
  </div>
  <div>
    <label for="ovens">Ovens</label>
    <input type="text" name="ovens" placeholder="Number of ovens" />
  </div>
  <div>
    <label for="stoves">Stoves</label>
    <input type="text" name="stoves" placeholder="Number of stoves" />
  </div>
  <button type="submit">Save New Kitchen</button>
</form>
<a href="/user/{{userId}}">return</a>