<div class="row light-green lighten-4 z-depth-3">
  <form action="/user/{{userId}}/menu/{{menu._id}}?_method=PUT" method="POST">
    <div>
      <label for="name"> Edit Menu Name:</label>
      <input type="text" name="name" value="{{menu.name}}" />
    </div>
    <button type="submit">Update Menu</button>
  </form>
</div>

<div class="return row">
  <div class="col s3 push-s1">
    <a href="/user/{{userId}}/menu/{{menu._id}}">Return</a>
  </div>
</div>