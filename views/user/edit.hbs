<div class="row light-green lighten-4 z-depth-3">
    <form action="/user/{{userSpecs._id}}?_method=PUT" method="POST">
        <div>
            <label for="name">What's Your Name?</label>
            <input type="text" name="name" value="{{userSpecs.name}}" />
        </div>
        <div>
            <label for="restaurant">What's your Restaurant Called?</label>
            <input type="text" name="restaurant" value="{{userSpecs.restaurant}}"></input>
        </div>
        <button type="submit">Save User</button>
    </form>
</div>

<div class="return row">
    <div class="col s3 push-s1">
        <a href="/user/{{userSpecs._id}}">Return</a>
    </div>
</div>