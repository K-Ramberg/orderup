<div class=" row listedUser col s6 push-s3 z-depth-4">
    <div class="row light-green lighten-4 listedUser">
        Welcome, {{userSpecs.name}} from: {{userSpecs.restaurant}}
    </div>

    <div class="yellow lighten-4 row que dark-green-text">
        <div class="orderList">0rders:</div>
        <ul>
            {{#each userSpecs.dishQue}}
            <div class="quedUp row light-green lighten-3">
                <form action="/user/{{../userSpecs._id}}/cut/{{_id}}?_method=DELETE" method="POST">
                    {{name}}: {{cookTime}} Minutes
                    <button type="submit">Item Completed</button>
                </form>
            </div>
            {{/each}}
        </ul>
    </div>
</div>

<div class="row menus">
    <div>
        Your Menus: {{#each userSpecs.menus}}
        <li>
            <a class="menuSelect" href="/user/{{../userId}}/menu/{{_id}}">{{name}}</a>
        </li>
        {{/each}}
    </div>
    <a class="return" href="/user/{{userId}}/menu/new">Add New Menu</a>
</div>

<div>
    <form class="delete" action="/user/{{userSpecs._id}}?_method=DELETE" method="POST">
        <button class="delete" type="submit">Delete User</button>
    </form>
</div>

<div class="edit row">
    <a href="/user/{{userId}}/edit">Edit user</a>
</div>

<div class="return row">
    <div class="col s3">
        <a href="/user">Return</a>
    </div>
</div>